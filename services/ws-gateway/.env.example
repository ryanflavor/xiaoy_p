# Runtime
PORT=8080
HOST=0.0.0.0
WS_PATH=/ws
HEALTH_PATH=/healthz
METRICS_PATH=/metrics
NATS_URLS=nats://nats:4222

# Auth (choose one)
# 1) Preferred: JWKS URL
# JWT_JWKS_URL=https://idp.example.com/.well-known/jwks.json
# 2) Static public key (PEM file path inside container)
JWT_PUBLIC_KEY=/run/secrets/jwt_pub.pem

# Access Control
ALLOWED_ORIGINS=https://app.example.com
WS_SUBJECT_WHITELIST=xy.md.*
WS_SEND_QUEUE_MAX=1000

# TLS for Gateway (WSS)
TLS_ENABLE=false
TLS_CERT_PATH=/run/secrets/tls.crt
TLS_KEY_PATH=/run/secrets/tls.key
TLS_CA_PATH=

# TLS for NATS (optional)
NATS_TLS_ENABLE=false
NATS_TLS_CA=/run/secrets/nats_ca.crt
NATS_TLS_CERT=/run/secrets/nats_client.crt
NATS_TLS_KEY=/run/secrets/nats_client.key

